{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=EVServiceCenterDev;Trusted_Connection=True;"
  },
  "JwtSettings": {
    "SecretKey": "MyVerySecureJwtSecretKeyForEVServiceCenter2024!E",
    "Issuer": "EVServiceCenter",
    "Audience": "EVServiceCenter-Users",
    "ExpirationMinutes": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EmailVerification": {
    "CallbackUrl": "https://localhost:7077/api/User/verify-email",
    "ExpiryHours": "24"
  },
  "ResetPassword": {
    "CallbackUrl": "https://localhost:7077/api/User/reset-password",
    "ExpiryHours": "1"
  },
  "Smtp": {
    "Host": "smtp.example.com",
    "Port": "587",
    "Username": "your-smtp-user",
    "Password": "your-smtp-password",
    "FromEmail": "no-reply@example.com",
    "FromName": "EV Service Center",
    "EnableSsl": "true",
    "Timeout": "30000"
  },
  "AppSettings": {
    "WebsiteUrl": "http://localhost:3000",
    "SupportEmail": "support@example.com",
    "SupportPhone": "1900-XXXX",
    "CompanyAddress": "Your Company Address"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "POST:/api/User/forgot-password",
        "Period": "1h",
        "Limit": 5
      },
      {
        "Endpoint": "GET:/api/User/verify-email",
        "Period": "1h",
        "Limit": 10
      },
      {
        "Endpoint": "GET:/api/User/reset-password",
        "Period": "1h",
        "Limit": 10
      },
      {
        "Endpoint": "POST:/api/User/reset-password-submit",
        "Period": "1h",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/User/resend-verification",
        "Period": "1h",
        "Limit": 3
      }
    ]
  },
  "Authentication": {
    "Google": {
      "ClientId": "your-google-client-id",
      "ClientSecret": "your-google-client-secret",
      "TokenValidationUrl": "https://www.googleapis.com/oauth2/v3/tokeninfo"
    },
    "Facebook": {
      "AppId": "your-facebook-app-id",
      "AppSecret": "your-facebook-app-secret",
      "DebugTokenUrl": "https://graph.facebook.com/debug_token",
      "UserInfoUrl": "https://graph.facebook.com/me?fields=id,name,email,picture"
    }
  }
}
